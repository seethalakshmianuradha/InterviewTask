@model IEnumerable<InterviewTask.Models.Employee>


<p>
    <h3>@Html.ActionLink("Create", "Create")</h3>

</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Designation)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FileName)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.CreatedDate)
        </th>

    </tr>

    @foreach (var item in Model)
    {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Designation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FileName)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.CreatedDate)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.EmpID })|
                @Html.ActionLink("Delete", "Delete", new { EmpID = item.EmpID }, new { onclick = "return confirm('Are you sure? You want to delete the record?');" })|
                @Html.ActionLink("Download Files", "DownloadFiles", new { EmpID = item.EmpID })|

            </td>
        </tr>
    }

</table>
